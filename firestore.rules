rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read for general content
    match /mountains/{mountainId} {
      allow read: if true;
      allow write: if false; // Only admin can write
    }
    match /infoItems/{infoItemId} {
      allow read: if true;
      allow write: if false; // Only admin can write
    }

    // Reservations can be created by any authenticated user
    match /reservations/{reservationId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }

    // Feedback can be created by anyone
    match /feedback/{feedbackId} {
        allow create: if true;
        allow read, update, delete: if false; // Only admin can read
    }

    // Tours can be read by anyone (for scoreboard)
    // Write access is controlled by functions
    match /tours/{tourId} {
        allow read: if true;
        allow create, update, delete: if request.auth != null; // Let backend functions handle logic
    }
    
    // User profile data
    match /users/{userId} {
      // A user can read and write their own profile
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      // Anyone authenticated can create a profile document (on signup)
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    match /coupons/{couponId} {
        allow read: if isOwner(resource.data.userId);
        allow create: if isAgent() || isAdmin();
        allow update: if isOwner(resource.data.userId);
        allow delete: if false;
    }

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserRole(userId) {
        return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    function isAdmin() {
        return isSignedIn() && getUserRole(request.auth.uid) == 'admin';
    }

    function isAgent() {
        return isSignedIn() && getUserRole(request.auth.uid) == 'agent';
    }
  }
}
